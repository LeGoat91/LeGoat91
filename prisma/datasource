// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ou "mysql", "sqlite", etc.
  url      = env("DATABASE_URL")
}

// Mod√®le d'exemple
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String
  createdAt DateTime @default(now())
}
